weights <- c(1, 0.5, 0.5)
polygenicScores <- c(rietveld2013, 0.6, 0.05)
summary(simulateIVFCBs(9, 4.6, combineScores(polygenicScores, weights), 0.3, 0.90, 10.8/100, 1500, 200, iqHigh))
